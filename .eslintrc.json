{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["src/public/**/*.js", "public/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "globals": {
        "FullCalendar": "readonly"
      }
    }
  ]
}



